{
  "name": "freight-for-all",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "cover": "jest --config=jest.config.json --coverage --watchAll",
    "nocover": "jest --config=jest.config.json --watchAll",
    "acceptance": "chimp --browser=phantomjs --ddp=http://localhost:3000 --jasmine --path=tests/acceptance",
    "acceptance-watch": "chimp --browser=phantomjs --ddp=http://localhost:3000 --watch --jasmine --path=tests/acceptance",
    "acceptance-ci": "chimp --browser=phantomjs --ddp=http://localhost:3000 --jasmine --path=tests/acceptance",
    "unit-ci": "jest --config=jest.config.json --coverage --runInBand",
    "meteor-ci": "TEST_BROWSER_DRIVER=phantomjs meteor test --port 4000 --driver-package meteortesting:mocha --once",
    "codeclimate-test-reporter": "codeclimate-test-reporter"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "lodash": "^4.17.4",
    "meteor-node-stubs": "^0.3.2",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chimp": "^0.50.2",
    "codeclimate": "0.0.32",
    "codeclimate-test-reporter": "^0.5.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "expect.js": "^0.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "raf": "^3.4.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-test-renderer": "^16.1.1"
  }
}
